<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/default_font</item>
        <item name="backgroundColor">@color/background</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="CircularDeterminateProgressBarUser">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progresscircle</item>
    </style>
    <style name="CircularDeterminateProgressBarKyle">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/kyle_progress_circle</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="fontFamily">@font/login_font</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@drawable/loginbackground</item>

    </style>

</resources>