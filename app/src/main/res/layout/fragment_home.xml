<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#1F1F21">

    <Button
        android:id="@+id/startWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/UserProgressMainScreen"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="135dp"
        android:background="#1F1F21"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="200dp"
        android:text="@string/start_workout"
        android:textSize="20sp"/>

    <ProgressBar
        android:id="@+id/UserProgressMainScreen"
        style="@style/CircularDeterminateProgressBarUser"
        android:layout_width="450dp"
        android:layout_height="450dp"
        tools:progress="20" />

    <ProgressBar
        android:id="@+id/KyleProgressMainScreen"
        style="@style/CircularDeterminateProgressBarKyle"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignTop="@+id/UserProgressMainScreen"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        tools:progress="20" />

    <TextView
        android:id="@+id/userMainTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UserProgressMainScreen"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="270dp"
        android:text="@string/you"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/kyleMainTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UserProgressMainScreen"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="66dp"
        android:text="Kyle"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/userProgValueTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userMainTV"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="270dp"
        android:text="0.0"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/kyleProgValueTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kyleMainTV"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="70dp"
        android:text="0.0"
        android:textSize="18sp" />


</RelativeLayout>
