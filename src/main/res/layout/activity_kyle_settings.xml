<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KyleSettings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/kyles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rename_antagonist" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/kyleName"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_weight="0"
                android:text="@string/current_antag_name" />

            <EditText
                android:id="@+id/newKyleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="@string/rename" />

        </LinearLayout>

        <Button
            android:id="@+id/changeKyleBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="@string/update" />

        <Button
            android:id="@+id/chngKyleToMainBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_button_text" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>